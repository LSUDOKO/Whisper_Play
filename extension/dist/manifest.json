{
  "name": "whisperplay-extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "WhisperPlay - Real-time audio streaming and translation extension",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.twitch.tv/*",
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*",
        "*://*.youtube.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}
